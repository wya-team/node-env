{
  "name": "@wya/repo-server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run dev:client",
    "dev": "nodemon --config nodemon.json",
    "dev:client": "ts-node -r tsconfig-paths/register ./app.ts",
    "dev:server": "cross-env NODE_ENV=production npm run dev",
    "build": "tsc -P tsconfig.json --declaration false --sourceMap false",
    "lint": "esw ./src ./app.ts --ext .ts --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch",
    "test": "cross-env NODE_ENV=test jest --no-cache --runInBand --forceExit --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:cover": "npm run test -- --coverage"
  },
  "scripts-info": {
    "start": "【后端 - Production】以生产环境方式启动，需要提前执行 build",
    "dev:client": "【前端 - Development】运行前端开发服务器",
    "dev:server": "【后端 - Development】运行后端开发服务器",
    "test": "【后端】单元测试"
  },
  "repository": {
    "type": "git",
    "url": "git@xxx:wya/wapi.git"
  },
  "author": "deot",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "config": "^3.3.1",
    "fs-extra": "^9.0.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-favicon": "^2.1.0",
    "koa-onerror": "^4.1.0",
    "koa-pino-logger": "^3.0.0",
    "koa-router": "^9.0.1",
    "koa-static-cache": "^5.1.3",
    "lru-cache": "^6.0.0",
    "mkdirp": "^1.0.4",
    "moment": "^2.27.0",
    "pino-multi-stream": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.3",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "universal-cookie": "^4.0.3",
    "uuid": "^8.3.0",
    "vue-server-renderer": "^2.6.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-favicon": "^2.0.19",
    "@types/koa-pino-logger": "^2.1.6",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static-cache": "^5.1.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.24",
    "@types/pino-multi-stream": "^5.0.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
